

section .text
global main
main:
    
    mov eax, 4
    mov ebx, 1
    mov ecx, msg_start
    mov edx, 14
    int 0x80


    mov eax, 5
    mov ebx, sourcefile
    mov ecx, 2
    int 0x80
    mov [sid], eax

    mov eax, 3
    mov ebx, [sid]
    mov ecx, buffer
    mov edx, 24
    int 0x80

    mov eax, 6
    mov ebx, [sid]
    int 0x80

    mov eax, 8
    mov ebx, newfile
    mov ecx, 0777o
    int 0x80
    mov [did], eax
    
    mov eax, 4
    mov ebx, [did]
    mov ecx, buffer
    mov edx, 24
    int 0x80

    mov eax, 6
    mov ebx, [did]
    int 0x80

    mov eax, 4
    mov ebx, 1
    mov ecx, msg_end
    mov edx, 12
    int 0x80

    ret

section .data
    sourcefile db 'demo.txt',0
    newfile db 'demo.txt.out',0
    msg_start db 'program start!',0
    msg_end db 'program end!',0
section .bss
    sid resd 1
    did resd 1
    buffer resb 30
